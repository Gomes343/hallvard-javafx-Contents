<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>

<GridPane xmlns:fx="http://javafx.com/fxml"
	fx:controller="javafx.personform.PersonController" hgap="20">
	<Label text="Name:"
		GridPane.columnIndex="0" 	GridPane.rowIndex="0"
	/>
    <TextField fx:id="nameField" promptText="Name" 	 	prefColumnCount="30"
    		onTextChange="#nameFieldChange"
    		onFocusedChange="#nameFieldFocusChange"
		GridPane.columnIndex="1" 	GridPane.rowIndex="0"
    />
	<Label text="Names can only contain letters, space ..." visible="false"
		 fx:id="nameFieldRule"
		GridPane.columnIndex="2" 	GridPane.rowIndex="0"
	/>
	<Label text="Email:"
		GridPane.columnIndex="0" 	GridPane.rowIndex="1"
	/>
    <TextField fx:id="emailField" promptText="Email" 	 	prefColumnCount="30"
		GridPane.columnIndex="1" 	GridPane.rowIndex="1"
    		onTextChange="#emailFieldChange"
    />
</GridPane>

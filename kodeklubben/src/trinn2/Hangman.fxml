<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.*?>
<?import javafx.scene.text.Text?>

<BorderPane minWidth="400.0" xmlns:fx="http://javafx.com/fxml">
  <center>
    <Pane minHeight="600.0" minWidth="400.0">
      <Circle fx:id="man1" fill="WHITE" layoutX="100.0" layoutY="20.0" radius="20.0" stroke="BLACK" />
      <Line fx:id="man2" endY="30.0" layoutX="100.0" layoutY="40.0" />
      <Line fx:id="man3" endX="-20.0" endY="10.0" layoutX="100.0" layoutY="50.0" />
      <Line fx:id="man4" endX="20.0" endY="10.0" layoutX="100.0" layoutY="50.0" />
      <Line fx:id="man5" endX="-20.0" endY="10.0" layoutX="100.0" layoutY="70.0" />
      <Line fx:id="man6" endX="20.0" endY="10.0" layoutX="100.0" layoutY="70.0" />
      <Group fx:id="man7">
        <Line endX="5.0" endY="5.0" layoutX="90.0" layoutY="15.0" />
        <Line endX="5.0" layoutX="90.0" layoutY="15.0" startY="5.0" />
        <Line endX="5.0" endY="5.0" layoutX="105.0" layoutY="15.0" />
        <Line endX="5.0" layoutX="105.0" layoutY="15.0" startY="5.0" />
      </Group>
    </Pane>
  </center>
  <top>
    <VBox>
      <Text fx:id="ask" text="Velkommen til Hangman!" />
      <HBox>
        <TextField fx:id="input" />
        <Button text="Guess!" onAction="#checkInput"/>
      </HBox>
      <Text fx:id="message" />
    </VBox>
  </top>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>
 
<?import javafx.scene.layout.BorderPane?>
<?import trinn2.ImageGrid?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns:fx="http://javafx.com/fxml">
	 <top>
	 	<Button text="New game" onAction="#newAction"/>
	 </top>
	 <center>
		<ImageGrid fx:id="imageGrid" 
			onMouseMoved="#mouseMoved"
			onMousePressed="#mousePressed"
			onMouseDragged="#mouseDragged"
			onMouseReleased="#mouseReleased"
			columnCount="8" rowCount="8"
			>
		</ImageGrid>
	 </center>
	 <bottom>
	 </bottom>
</BorderPane>
